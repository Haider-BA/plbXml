<!--
Pressure driven flow past a rectangular obstacle
Obstacle width: 0.01 m, channel width: 0.05 m
-->

<plbCase>
  <!-- basic physical parameters -->
  <parameters>
    <physL>0.01</physL> <!-- characteristic size -->
    <physU>0.1</physU> <!-- characteristic velocity -->
    <physNu>1e-5</physNu>
    <physRho>1000.</physRho>
    <pressureLevel>0.</pressureLevel>
    
    <latticeU>0.02</latticeU>
    <resolution>10</resolution> <!-- number of grid points per physL -->
    
    <lx>0.05</lx>
    <ly>0.1</ly>
  </parameters>

  <!-- region definitions -->
  <region id="0">
    <id>domain</id>
    <x0>0</x0>
    <x1>50</x1>
    <y0>0</y0>
    <y1>100</y1>
  </region>
	
  <region id="1">
    <id>inletRegion</id>
    <x0>1</x0>
    <x1>49</x1>
    <y0>0</y0>
    <y1>0</y1>
  </region>

  <region id="2">
    <id>outletRegion</id>
    <x0>1</x0>
    <x1>49</x1>
    <y0>100</y0>
    <y1>100</y1>
  </region>

  <region id="3">
    <id>leftWall</id>
    <x0>0</x0>
    <x1>0</x1>
    <y0>0</y0>
    <y1>100</y1>
  </region>

  <region id="4">
    <id>rightWall</id>
    <x0>50</x0>
    <x1>50</x1>
    <y0>0</y0>
    <y1>100</y1>
  </region>

  <region id="5">
    <id>block</id>
    <x0>18</x0>
    <x1>28</x1>
    <y0>30</y0>
    <y1>40</y1>
  </region>

  <region id="6">
    <id>blockInner</id>
    <x0>19</x0>
    <x1>27</x1>
    <y0>31</y0>
    <y1>39</y1>
  </region>

  <!-- define dynamics from regions -->
  <dynamicsFromRegion id="0">
    <regionId>domain</regionId>
    <type>RegularizedBGK</type>
  </dynamicsFromRegion>

  <dynamicsFromRegion id="1">
    <regionId>leftWall</regionId>
    <type>BounceBack</type>
  </dynamicsFromRegion>

  <dynamicsFromRegion id="2">
    <regionId>rightWall</regionId>
    <type>BounceBack</type>
  </dynamicsFromRegion>

  <dynamicsFromRegion id="3">
    <regionId>block</regionId>
    <type>BounceBack</type>
  </dynamicsFromRegion>

  <dynamicsFromRegion id="4">
    <regionId>blockInner</regionId>
    <type>NoDynamics</type>
  </dynamicsFromRegion>

  <!-- define boundary condition algorithm -->
  <bcType>regularized</bcType>

  <!-- define boundaries -->
  <boundary id="1">
    <id>inlet</id>
    <regionId>inletRegion</regionId>
    <type>velocity dirichlet</type>
  </boundary>
  <boundary id="2">
    <id>outlet</id>
    <regionId>outletRegion</regionId>
    <type>velocity neumann</type>
  </boundary>

  <!--
  set boundary condition to desired values: apply a pressure difference
  of 10 pascal
  -->
  <action id="1">
    <id>set</id>
    <type>once 0</type>
    <setVelocityBc id="1">
      <bcId>inlet</bcId>
      <bcValue>0. 0.1</bcValue>
    </setVelocityBc>
<!--    <setPressureBc id="2">
      <bcId>outlet</bcId>
      <bcValue>0</bcValue>
    </setPressureBc>-->
  </action>



  <!-- write a vtk file every 0.1 seconds of physical simulation time -->
  <action id="2">
    <id>write</id>
    <type>periodic 0 0.01 -1</type>
    <writeVtk>
      <fileName>out/vtk_</fileName>
    </writeVtk>
  </action>
  
  <run>5.0</run>
</plbCase>